<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p>
<% if !@task.completed %>
<%= "The task is not completed!"%>
<%else%>
<%= "The task is completed!"%>
<%end%>
</p>

<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>


<%= link_to "Go back to tasks", tasks_path() %>
<%= link_to "Edit task", edit_tasks_path(@task) %>
